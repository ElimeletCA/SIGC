<Page
    x:Class="SIGC.WPF.View.Views.Pages.Cliente.ListaClientePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SIGC.WPF.View.Views.Pages.Cliente"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ListaClientePage"
    d:DataContext="{d:DesignInstance local:ListaClientePage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />


        </Grid.ColumnDefinitions>
        <ui:DataGrid
            Name="DataGridViewCliente"
            Grid.Column="0"
            BorderBrush="Black"
            BorderThickness="2"
            ItemsSource="{Binding ViewModel.Datatablecliente, Mode=TwoWay}" />

    </Grid>
</Page>
